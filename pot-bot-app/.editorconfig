# Unix-style newlines with a newline ending every file
root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{js,jsx,css,html}]
indent_style = space
indent_size = 2
tab_width = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2